<div class="container">
  <% user = current_user %>
    <% user.bikes.each do |bike|%>
  <div class="tabs">
    <ul class="bikelist">
      <li class="bikebox">
        <%= cl_image_tag(bike.photo, width: 160, height: 160, crop: :thumb) %>
            <div class="renter-name">
              <p>RENTED BY</p>
              <h3> <%= @user.first_name %></h3>
            </div>
            <div class="start-date">
              <%= @start_date.try(:strftime, '%m-%e-%y') %>
            </div>
            <div cass="end-date">
              <%= @end_date.try(:strftime, '%m-%e-%y') %>
            </div>
            <div class="edit-delete text-muted">
            <%= link_to edit_bike_path(bike), class: "icon-align" do %>
              <i class="fas fa-edit"></i><p>EDIT BIKE</p>
            <% end %>
            <%= link_to bike_path(bike), method: :delete, data: { confirm: "Are you sure?" }, class: "icon-align" do %>
              <i class="fas fa-trash-alt"></i><p>DELETE BIKE</p>
            <% end %>
            </div>
      </li>
    </ul>
  </div>
  <% end %>
</div>
