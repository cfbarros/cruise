<% unless current_user.rents.empty? %>
  <div class="wrapper">
    <div class="container make-it-flex">
      <div>
        <% rent = current_user.rents.first %>
        <h1><%= rent.bike.user.first_name %>'s Bike is your <br> bike until <%= rent.end_date.try(:srftime, '%m-%e-%y') %></h1>
        <div class="return">
          <h3>Return the bike to: </h3>
          <p>   <%= rent.bike.user.address %></p>
        </div>
      </div>
      <div class='bike-img'>
        <%= image_tag 'https://images.unsplash.com/photo-1487803836022-91054ca05fdd?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=6965877f5debc4b6e17d54dafcbce6d2&auto=format&fit=crop&w=1334&q=80', class: 'img-tag' %>
      </div>
    </div>
  </div>
<% end %>

<% if current_user.bikes.empty? && current_user.rents.empty? %>
  <div class="text-center make-space">
    <%= image_tag 'bike_for_background.png' %>
    <h6>Have a spare bike?</h6>
    <%= link_to "Add a Bike", new_bike_path, class: 'btn btn-danger' %>
  </div>
<% elsif current_user.bikes.empty? %>
  <div class="text-center make-space">
    <h6>Have a spare bike?</h6>
    <%= link_to "Add a Bike", new_bike_path, class: 'btn btn-danger' %>
  </div>
<% else %>
  <% bikes = current_user.bikes %>
  <div class="table-head-flex">
    <div class="heading">
      <h3>Your bikes for rent:</h3>
      <%= render "mybikes_display" %>
    </div>
    <div class="add-bike">
      <%= link_to "Add a Bike", new_bike_path, class: 'btn btn-danger' %>
    </div>
  </div>
<% end %>
