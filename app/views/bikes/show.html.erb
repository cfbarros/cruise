<div class="wrapper">
  <div class="container text-center" style="height: 100vh;">
    <h1 class="top-text">How about this bike?</h1>
    <!-- <br>
    <br> -->
    <div class="grid-triple-block">
      <div class="col-md-3 block-around">
        <ul>
          <h3 class="text-left"><%= @bike.user.first_name %>'s <%= @bike.brand %></h3>
          <br>
          <div class="text-left">
          <p><strong>KIND: </strong> <%= @bike.kind %></p>
          <p><strong>BRAND: </strong><%= @bike.brand %></p>
          <p><strong>SIZE: </strong><%= @bike.size %></p>
          <p><strong>LOCATION: </strong><%= @bike.address %></p>
          </div>
        </ul>
      </div>
      <div class="col-md-6">
      <img src=<%= cl_image_path @bike.photo %> class="img-responsive" alt="Mountain Bike">
      </div>
       <div class="col-md-3 text-left block-around">
        <h2>R$<%= @bike.price %></h2>
        <p class="text-muted">Daily rental</p>
        <br>
        <div class="from-group text-left">
          <%= form_for [@bike, @rent], :html=> { class: 'side_selector' } do |f|%>
            <%= f.label :start_date%>
            <%= f.date_field :start_date, class: "form-control"%>
            <br>
            <%= f.label :end_date%>
            <%= f.date_field :end_date, class: "form-control"%>
            <br>
            <%= f.submit "Rent this bike", class: "btn btn-primary btn-block" %>
        <% end %>
        </div>
        <br>
      </div>
    </div>
  </div>
</div>
