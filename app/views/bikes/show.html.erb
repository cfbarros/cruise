<div class="wrapper">
  <div class="container text-center">
    <h1>How about this bike?</h1>
    <br>
    <br>
    <div class="grid-triple-block">
      <div class="col-md-4">
        <ul>
          <h3 class="text-left"><%= @bike.user.first_name %>'s awesome bike</h3>
          <br>
          <div class="text-left">
          <p><strong>KIND: </strong> <%= @bike.kind %></p>
          <p><strong>BRAND: </strong><%= @bike.brand %></p>
          <p><strong>SIZE: </strong><%= @bike.size %></p>
          <p><strong>LOCATION: </strong><%= @bike.location %></p>
          </div>
        </ul>
      </div>
      <div class="col-md-5">
      <img src="https://images.unsplash.com/photo-1487803836022-91054ca05fdd?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=6965877f5debc4b6e17d54dafcbce6d2&auto=format&fit=crop&w=1267&q=80" class="img-responsive" alt="Mountain Bike">
      </div>
       <div class="col-md-3">
        <h2>$<%= @bike.price %></h2>
        <p class="text-muted">Daily rental</p>
        <br>
        <br>
        <%= link_to "Pick bike", rent_path(@bike), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
