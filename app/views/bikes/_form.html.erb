<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
      <div class="breath">
        <h1 class="text-center">Add a Bike</h1>
        <%= simple_form_for(@bike) do |f| %>


          <%= f.input :brand %>
          <%= f.input :address %>
          <%= f.input :price %>

          <div class="select-container">
            <%= f.label :kind %>
            <%= f.select(:kind, @bike.kind_options) %>
            <%= f.label :size %>
            <%= f.select(:size, @bike.size_options) %>
          </div>

          <%= f.submit %>

        <% end %>
      </div>
    </div>
  </div>
</div>

