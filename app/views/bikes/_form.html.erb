<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-4 col-md-3">
      <%= simple_form_for(@bike) do |f| %>
        <%= f.input :kind %>
        <%= f.input :size %>
        <%= f.input :brand %>
        <%= f.input :address %>
        <%= f.input :price %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>

